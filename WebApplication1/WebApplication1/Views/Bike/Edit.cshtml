@model Compare_bikes.Models.BikeViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Bike</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Modelo" class="control-label"></label>
                <input asp-for="Modelo" class="form-control" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigoFabricante" class="control-label"></label>
                <select asp-for="CodigoFabricante" class="form-control">
                    <option value="" selected="selected"></option>

                    @foreach (Compare_bikes.Modelos.Fabricante fabricante in ViewBag.Fabricantes)
                    {
                        <option value="@fabricante.Id.ToString()"> @fabricante.Nome </option>
                    }

                </select>
                <span asp-validation-for="CodigoFabricante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quadro" class="control-label"></label>
                <input asp-for="Quadro" class="form-control" />
                <span asp-validation-for="Quadro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Suspencao" class="control-label"></label>
                <input asp-for="Suspencao" class="form-control" />
                <span asp-validation-for="Suspencao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Caixa_direcao" class="control-label"></label>
                <input asp-for="Caixa_direcao" class="form-control" />
                <span asp-validation-for="Caixa_direcao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
